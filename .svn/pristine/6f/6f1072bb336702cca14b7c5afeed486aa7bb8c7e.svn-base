<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="horizontal" >
	
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>

	<LinearLayout
	    android:layout_width="0dp"
	    android:layout_height="match_parent"
	    android:paddingLeft="40dp"
		android:paddingRight="40dp"
		android:layout_gravity="fill_horizontal"
		android:background="@color/light_blue"
	    android:orientation="horizontal"
	    android:layout_weight="1" >
	    
		<ImageView
			    android:id="@+id/main_menu_logo"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:contentDescription="@string/main_menu_logo"
			    android:src="@drawable/app_logo_big" />		
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" >	    			
				<Button
				    android:id="@+id/main_menu_buttonSearch"
				    android:layout_width="200dp"
				    android:layout_height="wrap_content"
				    android:layout_above="@+id/main_menu_buttonPreview"
				    android:layout_alignParentRight="true"
				    android:background="@drawable/btn_orange"
				    android:paddingBottom="20dp"
				    android:paddingLeft="25dp"
				    android:paddingRight="25dp"
				    android:paddingTop="20dp"
				    android:text="@string/main_menu_buttonSearch"
				    android:textColor="@android:color/white"
				    android:textSize="20sp"
				    android:textStyle="bold" />					
				<Button
				    android:id="@+id/main_menu_buttonPreview"
				    android:layout_width="200dp"
				    android:layout_height="wrap_content"
				    android:layout_centerInParent="true"
				    android:layout_alignParentRight="true"
				    android:background="@drawable/btn_orange"
				    android:paddingBottom="20dp"
				    android:paddingLeft="25dp"
				    android:paddingRight="25dp"
				    android:paddingTop="20dp"
				    android:text="@string/main_menu_buttonPreview"
				    android:textColor="@android:color/white"
				    android:textSize="20sp"
				    android:textStyle="bold" />					
				<Button
				    android:id="@+id/main_menu_buttonFavorites"
				    android:layout_width="200dp"
				    android:layout_height="wrap_content"
				    android:layout_below="@+id/main_menu_buttonPreview"
				    android:layout_alignParentRight="true"
				    android:background="@drawable/btn_orange"
				    android:paddingBottom="20dp"
				    android:paddingLeft="25dp"
				    android:paddingRight="25dp"
				    android:paddingTop="20dp"
				    android:text="@string/main_menu_buttonFavorites"
				    android:textColor="@android:color/white"
				    android:textSize="20sp"
				    android:textStyle="bold" />
	
		</RelativeLayout>
		
	</LinearLayout>
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>
	
</LinearLayout>