<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fhe.activities"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/app_logo"
        android:label="@string/app_name" android:allowTaskReparenting="false">
        <activity android:name=".MainMenuActivity" android:theme="@style/Theme.Showtime">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter></activity>
        <activity android:name=".SearchActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".SettingsActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".MovieListActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".SearchResultActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".MovieDetailsActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".MovieVideoActivity" android:theme="@style/Theme.Showtime.NoActionBar"></activity>
        <activity android:name=".CinemaDetailsActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".PreviewActivity" android:theme="@style/Theme.Showtime"></activity>
        <activity android:name=".FavoritesActivity" android:theme="@style/Theme.Showtime"></activity>
    </application>

</manifest>