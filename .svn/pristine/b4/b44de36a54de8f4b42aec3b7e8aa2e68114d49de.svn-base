<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/light_blue">

    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>
    
    <RelativeLayout
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingTop="12dp" >
	    <ImageView
	        android:id="@+id/movie_image"
	        android:layout_width="105dp"
	        android:layout_height="70dp"
	        android:contentDescription="@string/app_separatorDescription" />
	    <ProgressBar
	        android:id="@+id/movie_image_progress"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true" />
    </RelativeLayout>
    
    <TextView 
	    android:id="@+id/movie_title_textView"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:textAppearance="?android:attr/textAppearanceMedium"
	    android:textColor="@android:color/black"
	    android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_weight="1" />
    
    <ImageView
        android:id="@+id/movie_rating_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rating_bad" 
    	android:paddingRight="5dp"
    	android:paddingTop="10dp"
    	android:paddingBottom="10dp" 
    	android:layout_gravity="center"
    	android:contentDescription="@string/app_separatorDescription" />
    
    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>
	    
</LinearLayout>