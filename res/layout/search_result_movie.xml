<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="@color/light_blue">

    <ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>
	
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/search_result_cinema_movie_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            android:textColor="@android:color/black" 
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/search_result_cinema_showTimes_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/search_result_cinema_rating_imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:paddingRight="5dp"
        android:src="@drawable/rating_bad"
        android:contentDescription="@string/app_separatorDescription" />
	
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:layout_gravity="bottom|top"
		android:background="@drawable/film_reel_border"
		android:baselineAlignBottom="false"
		android:contentDescription="@string/app_separatorDescription"/>
	    
</LinearLayout>